<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/populartextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popular Destination"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/imagepopulardestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kathmandu"
                android:layout_below="@id/populartextID"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:id="@+id/layoutimageID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/imagepopulardestination"
                android:layout_margin="5dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/kathmandu"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/kathmandu"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutimage1ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutimageID"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/kathmandu"
                    android:layout_weight="1"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/kathmandu"
                    android:layout_weight="1"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutimage2ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutimage1ID"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/kathmandu"
                    android:layout_weight="1"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/kathmandu"
                    android:layout_weight="1"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>